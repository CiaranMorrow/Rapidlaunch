@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model IEnumerable<Rapidlaunch.Models.Role>

@{
    ViewData["Title"] = "Index";
}
@if (SignInManager.IsSignedIn(User))
{
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.roleName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.roleName)
                    </td>
                    <td class="tester-editor">
                        <div class="dropdownIndex">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Data Option
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <a asp-action="Edit" asp-route-id="@item.roleID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.roleID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.roleID">Delete</a>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <h2>You are not authorised to view this content - <br />Please log in.</h2>
            <br /><a class="btn btn-danger" asp-area="identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
}
