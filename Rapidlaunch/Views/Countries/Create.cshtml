@model Rapidlaunch.Models.Country
<!-- uses the model from country -->
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<!-- reffered to as create  -->

<hr />
<div class="row justify-content-md-center"> <!-- centering the whole thing for the user to have all devices -->
    <h4>Country</h4> <!-- heading centralised -->
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="countryName" class="control-label"></label>
                <input asp-for="countryName" class="form-control" />
                <span asp-validation-for="countryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a> <!-- nav button -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
